<div class="container text-center content-box">
  <div class="row card">
    <h2><%= @cocktail.name %></h2>
    <%= cl_image_tag @cocktail.photo.url, height: 100, width: 100, crop: :scale, class: "img-circle" %>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= "#{dose.description} #{dose.ingredient.name}" %></li>
      <% end %>
    </ul>
    <%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-pink" %>
    &nbsp;
    <%= link_to "Add Photo", upload_photo_path(@cocktail), class: "btn btn-pink" %>
    <br>
    <%= link_to "Write Comment", new_review_path(@cocktail), class: "btn btn-pink" %>
    &nbsp;
    <%= link_to "Read Comments", all_reviews_path(@cocktail), class: "btn btn-pink" %>
    &nbsp;
    <%= link_to "Delete", cocktail_path(@cocktail), method: :delete, class: "btn btn-pink" %>
    &nbsp;
    <%= link_to "Home", cocktails_path, class: "btn btn-pink" %>
  </div>
</div>
