<div class="container text-center content-box">
  <div class="row card">
    <h2><%= @cocktail.name %></h2>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose %></li>
      <% end %>
    </ul>
  <ul class="list-inline">
    <li><%= link_to "Delete", cocktail_path(@cocktail), method: :delete, class: "btn btn-pink" %></li>
    <li><%= link_to "Home", cocktails_path, class: "btn btn-pink" %></li>
    </ul>
  </div>
</div>
