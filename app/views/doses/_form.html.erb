<div class="container text-center form-stuff">
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description, as: :select, collection: Dose::DOSES, include_blank: "Select dosage" %>
    <%= f.input :ingredient_id, as: :select, collection: Ingredient.order(:name), include_blank: "Select ingredient" %>
    <%= link_to "Nevermind", cocktails_path, class: "btn btn-pink" %>&nbsp;<%= f.submit "Add Ingredient", class: "btn btn-pink" %>
  <% end %>
</div>
